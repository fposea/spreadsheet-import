<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">
    <Dialog
        title="Upload Excel File"
        class="sapUiContentPadding">
        <content>
            <VBox>
                <u:FileUploader
                    id="fileUploader"
                    width="100%"
                    tooltip="Upload Excel File"
                    placeholder="Choose Excel file..."
                    change=".onFileChange"
                    style="Emphasized"/>
                <Text
                    text="Only Excel files (.xls, .xlsx, .xlsm) are allowed"
                    class="sapUiSmallMarginTop"/>
            </VBox>
        </content>
        <buttons>
            <Button
                text="Upload"
                press=".onUploadPress"
                type="Emphasized"/>
            <Button
                text="Cancel"
                press=".onCloseDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition> 